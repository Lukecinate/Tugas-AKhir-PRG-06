<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/syss_logo"
        android:layout_width="145dp"
        android:layout_height="95dp"
        android:layout_marginEnd="230dp"
        android:src="@drawable/syss_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/hello_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Hello, Welcome Back!"
                android:gravity="center"
                android:textColor="#146C94"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggestion System Monitoring"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="#3B608C"
                android:textAlignment="center"
                android:layout_marginTop="3dp"/>

            <EditText
                android:id="@+id/id_number_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/email"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Nomor Induk"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="@color/blue_200"
                android:textColorHint="#756C6C" />

            <EditText
                android:id="@+id/password_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/password"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/blue_200"
                android:textColorHint="#756C6C" />

            <ImageButton
                android:id="@+id/login_button"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="32dp"
                app:srcCompat="@drawable/btn_arrow2" />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>